# LDPlayer Management System - Environment Configuration
# Copy this file to .env and update with your values

# ============================================================================
# JWT Authentication Settings
# ============================================================================

# SECRET KEY for JWT tokens - CHANGE THIS IN PRODUCTION!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-change-this-in-production-use-strong-random-key-here

# Token expiration times (in minutes/days)
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# JWT Algorithm
JWT_ALGORITHM=HS256


# ============================================================================
# Server Configuration
# ============================================================================

# Server host and port
SERVER_HOST=0.0.0.0
SERVER_PORT=8001

# Environment: development, staging, production
ENVIRONMENT=development

# Enable debug mode (only for development!)
DEBUG=true


# ============================================================================
# Database Configuration (Future)
# ============================================================================

# Database URL (when moving from in-memory to real DB)
# DATABASE_URL=postgresql://user:password@localhost:5432/ldplayer_db

# Redis URL (for token blacklist, caching)
# REDIS_URL=redis://localhost:6379/0


# ============================================================================
# LDPlayer Configuration
# ============================================================================

# Path to LDPlayer installation
LDPLAYER_PATH=C:\\LDPlayer\\LDPlayer9

# Path to ldconsole.exe
LDCONSOLE_PATH=C:\\LDPlayer\\LDPlayer9\\ldconsole.exe

# Path to dnconsole.exe
DNCONSOLE_PATH=C:\\LDPlayer\\LDPlayer9\\dnconsole.exe


# ============================================================================
# Workstation Configuration
# ============================================================================

# Default workstation list (comma-separated)
WORKSTATIONS=ws_001,ws_002,ws_003,ws_004,ws_005,ws_006,ws_007,ws_008

# WinRM timeout (seconds)
WINRM_TIMEOUT=30

# Command retry attempts
COMMAND_RETRY_ATTEMPTS=3


# ============================================================================
# Logging Configuration
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/app.log

# Max log file size (MB)
LOG_MAX_SIZE_MB=10

# Number of backup log files
LOG_BACKUP_COUNT=5


# ============================================================================
# CORS Configuration
# ============================================================================

# Allowed origins (comma-separated, * for all)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Allow credentials
CORS_ALLOW_CREDENTIALS=true


# ============================================================================
# Security Settings
# ============================================================================

# Rate limiting (requests per minute per IP)
RATE_LIMIT_PER_MINUTE=60

# Password requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL=true

# Session timeout (minutes)
SESSION_TIMEOUT_MINUTES=60


# ============================================================================
# Email Configuration (Future)
# ============================================================================

# SMTP settings for email verification, password reset
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@ldplayer-system.local


# ============================================================================
# Monitoring & Alerts
# ============================================================================

# Enable monitoring dashboard
MONITORING_ENABLED=true

# Alert thresholds
ALERT_CONSECUTIVE_FAILURES=3
ALERT_LATENCY_THRESHOLD_MS=5000

# Monitoring refresh interval (seconds)
MONITORING_REFRESH_INTERVAL=5


# ============================================================================
# Advanced Settings
# ============================================================================

# Enable API documentation (Swagger UI)
ENABLE_DOCS=true

# Enable API key authentication (in addition to JWT)
ENABLE_API_KEYS=false

# Timezone
TIMEZONE=UTC
