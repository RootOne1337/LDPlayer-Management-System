# ============================================================================
# LDPlayer Management System - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your configuration values
# WARNING: Never commit .env file to version control!
# ============================================================================

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Enable debug mode (set to false in production!)
DEBUG=true

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Server host and port
HOST=0.0.0.0
PORT=8001

# ============================================================================
# SECURITY - JWT & AUTHENTICATION
# ============================================================================

# Secret key for JWT token signing
# Generate with: openssl rand -hex 32
# IMPORTANT: Change this in production!
JWT_SECRET=your-super-secret-key-change-this-in-production

# JWT token expiration time in seconds (24 hours = 86400)
JWT_EXPIRATION=86400

# Admin credentials (default user)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password-in-production

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8001,http://127.0.0.1:8001

# ============================================================================
# DATABASE
# ============================================================================

# Database URL (SQLite by default)
# Format: sqlite:///./database.db (relative path)
# Or: sqlite:////absolute/path/to/database.db
DATABASE_URL=sqlite:///./ldplayer.db

# Database connection pool settings
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# ============================================================================
# LDPLAYER CONFIGURATION
# ============================================================================

# Path to LDPlayer executable
LDPLAYER_EXECUTABLE=/Program Files/LDPlayer/LDPlayer.exe

# LDPlayer command timeout (seconds)
LDPLAYER_TIMEOUT=30

# ============================================================================
# WORKSTATION CONFIGURATION
# ============================================================================

# WinRM port (default: 5985 for HTTP, 5986 for HTTPS)
WINRM_PORT=5985

# WinRM connection timeout (seconds)
WINRM_TIMEOUT=30

# WinRM protocol: http or https
WINRM_PROTOCOL=http

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log file path
LOG_FILE=logs/app.log

# Log file maximum size in MB (before rotation)
LOG_FILE_MAX_SIZE=10

# Number of backup log files to keep
LOG_FILE_BACKUP_COUNT=5

# Log format (detailed or simple)
LOG_FORMAT=detailed

# ============================================================================
# CACHING CONFIGURATION
# ============================================================================

# Enable caching
ENABLE_CACHE=true

# Cache TTL (Time To Live) in seconds
CACHE_TTL=300

# Maximum cache size in MB
CACHE_MAX_SIZE=100

# ============================================================================
# MONITORING & METRICS
# ============================================================================

# Enable Prometheus metrics
ENABLE_METRICS=true

# Metrics export interval (seconds)
METRICS_INTERVAL=60

# ============================================================================
# EMAIL CONFIGURATION (Optional - for notifications)
# ============================================================================

# SMTP server
SMTP_SERVER=smtp.gmail.com

# SMTP port
SMTP_PORT=587

# SMTP username
SMTP_USERNAME=your-email@gmail.com

# SMTP password or app-specific password
SMTP_PASSWORD=your-app-password

# SMTP sender email
SMTP_FROM=noreply@ldplayer-system.local

# Enable TLS
SMTP_USE_TLS=true

# ============================================================================
# API CONFIGURATION
# ============================================================================

# API rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=100

# API request timeout (seconds)
API_REQUEST_TIMEOUT=30

# ============================================================================
# BACKUP CONFIGURATION (Optional)
# ============================================================================

# Enable automatic backups
ENABLE_AUTO_BACKUP=true

# Backup interval (seconds, default: 3600 = 1 hour)
BACKUP_INTERVAL=3600

# Backup retention (days, delete backups older than this)
BACKUP_RETENTION_DAYS=30

# Backup directory
BACKUP_DIR=./backups

# ============================================================================
# SECURITY CERTIFICATES (Optional - for HTTPS)
# ============================================================================

# SSL certificate path (for HTTPS)
# SSL_CERT_FILE=/path/to/cert.pem

# SSL key path (for HTTPS)
# SSL_KEY_FILE=/path/to/key.pem

# ============================================================================
# ADVANCED CONFIGURATION
# ============================================================================

# Enable circuit breaker for resilience
ENABLE_CIRCUIT_BREAKER=true

# Circuit breaker failure threshold
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5

# Circuit breaker recovery timeout (seconds)
CIRCUIT_BREAKER_TIMEOUT=60

# Enable request validation
ENABLE_REQUEST_VALIDATION=true

# Maximum request body size (MB)
MAX_REQUEST_SIZE=10

# ============================================================================
# DEVELOPMENT ONLY
# ============================================================================

# Enable CORS from any origin (development only!)
# ALLOW_ORIGINS_REGEX=.*

# Enable detailed error responses (development only!)
# DETAILED_ERRORS=true

# ============================================================================
# NOTES
# ============================================================================
# 1. Never commit this file to version control
# 2. Use different values for development, staging, and production
# 3. For production, ensure:
#    - DEBUG=false
#    - ENVIRONMENT=production
#    - Generate new JWT_SECRET
#    - Use strong ADMIN_PASSWORD
#    - Configure SSL certificates
#    - Set appropriate CORS_ORIGINS
# 4. All values are optional and have sensible defaults
# 5. For help, see INSTALLATION.md or email support@your-domain.com
